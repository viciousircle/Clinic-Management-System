@page
@model OOP_Final_Project.Pages.Patients.MedicalHistoryModel
@{
    ViewData["Title"] = "Medical History";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="fw-bold">Medical History</h1>
        <p class="text-muted">Review the patient's complete medical history.</p>
    </div>

    <div class="d-flex gap-4">
        <!-- Patient Information -->
        <div class="card shadow-lg flex-grow-1" style="flex: 1; max-width: 50%;">
            <div class="card-header bg-dark text-white">
                <h4 class="mb-0">Patient Information</h4>
            </div>
            <div class="card-body px-4 py-4">
                <div class="mb-3">
                    <h6 class="fw-bold">Patient Name</h6>
                    <p class="text-muted">@Model.PatientName</p>
                </div>
                <div class="mb-3">
                    <h6 class="fw-bold">Date of Birth</h6>
                    <p class="text-muted">@Model.DateOfBirth</p>
                </div>
                <div class="mb-3">
                    <h6 class="fw-bold">Gender</h6>
                    <p class="text-muted">@Model.Gender</p>
                </div>
                <div class="mb-3">
                    <h6 class="fw-bold">Contact Number</h6>
                    <p class="text-muted">@Model.ContactNumber</p>
                </div>
            </div>
        </div>

        <!-- Medical History -->
        <div class="card shadow-lg flex-grow-2 w-100 " style="flex: 3;">
            <div class="card-header bg-dark text-white text-center">
                <h4 class="mb-0">Medical History</h4>
            </div>
            <div class="card-body p-0">
                @if (Model.MedicalRecords?.Any() == true)
                {
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Date</th>
                                <th scope="col">Condition</th>
                                <th scope="col">Prescribed Medication</th>
                                <th scope="col">Notes</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in Model.MedicalRecords)
                            {
                                <tr>
                                    <td>@record.Date.ToShortDateString()</td>
                                    <td>@record.Condition</td>
                                    <td>@record.Medication</td>
                                    <td>@record.Notes</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center text-muted m-4">No medical records available for this patient.</p>
                }
            </div>
        </div>
    </div>
</div>
