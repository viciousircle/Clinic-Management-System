@page
@model IndexModel
@{
    ViewData["Title"] = "Home Patient";
}

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<div class="container mt-5 pt-5">
    <!-- Dashboard Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold" style="color:#457b9d;">VICIOUSIRCLE CLINIC</h1>
        <h5 style="color:#1d3557;">Welcome to the Viciousircle Clinic</h5>
    </div>

    <!-- Main Content -->
    <div class="row">
        <!-- Overview Cards -->
        <div class="col-md-12">
            <div class="row d-flex justify-content-center align-items-stretch">
                <!-- Upcoming Appointments -->
                <div class="col-sm-4">
                    <div class="card shadow border-1 h-100">
                        <div class="card-header text-white" style="background-color: #457b9d;">
                            <h3 class="fs-6 mb-0">Appointments</h3>
                        </div>
                        <div class="card-body py-4">
                            <h5 class="card-title">1 Upcoming Appointment</h5>
                            <p class="card-text text-muted">
                                Please arrange time to come on time for your appointment.
                            </p>
                            <div class="d-flex gap-2">
                                <a href="@Url.Page("Appointments/InfoAppointment")" class="btn"
                                    style="background-color: #457b9d; color: aliceblue;">
                                    <i class="fas fa-info-circle"></i> See Details
                                </a>
                                <a href="@Url.Page("Appointments/MakeAnAppointment")" class="btn btn-outline-dark">
                                    <i class="fas fa-calendar-plus"></i> Book New
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Medical History -->
                <div class="col-sm-4">
                    <div class="card shadow border-1 h-100">
                        <div class="card-header text-white" style="background-color: #457b9d">
                            <h3 class="fs-6 mb-0">Medical History</h3>
                        </div>
                        <div class="card-body py-4">
                            <h5 class="card-title">Latest Visit: 15 Nov 2024</h5>
                            <p class="card-text text-muted">
                                View your complete medical history from past visits.
                            </p>
                            <a href="@Url.Page("Patients/MedicalHistory")" class="btn btn-dark">
                                <i class="fas fa-history"></i> View History
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Placeholder for future scripts
    </script>
}

<!-- Bootstrap JS and Dependencies -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
