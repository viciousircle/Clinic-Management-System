@page
@model IndexModel
@{
    ViewData["Title"] = "Home Patient";
}

<head>

</head>

<div class="container mt-5">
    <!-- Dashboard Header -->
    <div class="text-center mb-5">
        <h1 class="display-4">VICIOUSIRCLE CLINIC</h1>
        <h4>Welcome to the Viciousircle Clinic System</h4>
    </div>


    <!-- Main Content -->
    <div class="row">
        <!-- Overview Cards -->
        <div class="col-md-12">
            <div class="row">
                <!-- Upcoming Appointments -->
                <div class="col-sm-6">
                    <div class="card text-white bg-dark shadow-lg mb-4">
                        <div class="card-header d-flex align-items-center ">
                            <i class="bi bi-calendar-check mr-2"></i> Upcoming Appointments
                        </div>
                        <div class="border-top border-secondary"></div>
                        <div class="card-body">
                            <h5 class="card-title">1 Appointment</h5>
                            <p class="card-text">Please arrange time to come on time for your appointment.</p>

                            <a href="@Url.Page("Appointments/InfoAppointment")" class="btn btn-light">See
                                Details</a>
                        </div>
                    </div>
                </div>

                <!-- Medical History -->
                <div class="col-sm-6">
                    <div class="card bg-dark text-white shadow-lg mb-4">
                        <div class="card-header d-flex align-items-center">
                            <i class="bi bi-file-earmark-medical mr-2"></i> Medical History
                        </div>
                        <div class="border-top border-secondary"></div>
                        <div class="card-body">
                            <h5 class="card-title">Latest Visit: 15 Nov 2024</h5>
                            <p class="card-text">Review your past diagnoses and treatment records.</p>
                            <a href="@Url.Page("Patients/MedicalHistory")" class="btn btn-warning text-dark">View
                                History</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>


        <!-- Patient Support Section -->

        <div class="col-md-6">
            <div class="card bg-light  text-dark shadow-lg mb-4">
                <div class="card-header d-flex align-items-center">
                    <i class="bi bi-headset"></i> Want a new appointment?
                </div>
                <div class="card-body">
                    <p>Book a new appointment with your doctor.</p>
                    <a href="@Url.Page("Appointments/MakeAnAppointment")" class="btn btn-outline-dark">Book</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-lg mb-4">
                <div class="card-header d-flex align-items-center">
                    <i class="bi bi-headset"></i> Need Help?
                </div>
                <div class="card-body">
                    <p>Contact our support team for assistance with your records, appointments</p>
                    <a href="@Url.Page("Support")" class="btn btn-secondary">Contact Support</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Future Placeholder for Chart.js -->
    <script>
        // For dynamic content later
    </script>
}

<!-- Bootstrap JS and Dependencies -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
