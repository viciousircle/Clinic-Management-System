@model OOP_Final_Project.ViewModels.DoctorViewModel
@await Html.PartialAsync("Modals/_prescribeDetailsModal")


<div class="px-5">
    <!-- Header Section -->
    <div class=" " style="padding-top: 64px;">
        <div class="  d-flex justify-content-between align-items-center mb-4">
            <h3 class="mb-0">Prescribe</h3>
        </div>
    </div>

    <hr>


    <!-- Statistics Section -->
    <div class="my-4 d-flex flex-wrap gap-md-3" style="justify-content:flex-start; align-items: center;">
        <h5 class="text-muted mb-0">Today</h5>

        <!-- Total Appointments -->
        <div class="col-md-2 d-flex flex-column">
            <div class="card quick-access-card  shadow-sm" style="background-color: white; border-radius: 16px;">
                <div class="card-body py-2 ">
                    <div class="d-flex  align-items-center gap-md-2" style="justify-content: space-between;">
                        <div class="text-muted">Total</div>
                        <h3 class="mb-0 pb-0 ">@Model.OnDatePrescriptions.Count</h3>
                    </div>
                </div>
            </div>
        </div>
        <!-- Total Appointments -->
        <div class="col-md-2 d-flex flex-column">
            <div class="card quick-access-card  shadow-sm" style="background-color: white; border-radius: 16px;">
                <div class="card-body py-2 ">
                    <div class="d-flex  align-items-center gap-md-2" style="justify-content: space-between;">
                        <div class="text-success">Done</div>
                        <h3 class="mb-0 pb-0 text-success">@Model.OnDateDonePrescriptions.Count</h3>
                    </div>
                </div>
            </div>
        </div>
        <!-- Total Appointments -->
        <div class="col-md-2 d-flex flex-column">
            <div class="card quick-access-card  shadow-sm" style="background-color: white; border-radius: 16px;">
                <div class="card-body py-2 ">
                    <div class="d-flex  align-items-center gap-md-2" style="justify-content: space-between;">
                        <div class="text-warning">Pick up</div>
                        <h3 class="mb-0 pb-0 text-warning">@Model.OnDatePickupPrescriptions.Count</h3>
                    </div>
                </div>
            </div>
        </div>
        <!-- Total Appointments -->
        <div class="col-md-3 d-flex flex-column">
            <div class="card quick-access-card  shadow-sm" style="background-color: white; border-radius: 16px;">
                <div class="card-body py-2 ">
                    <div class="d-flex  align-items-center gap-md-2" style="justify-content: space-between;">
                        <div class="text-danger">Waiting prepare</div>
                        <h3 class="mb-0 pb-0 text-danger">@Model.OnDatePreparePrescriptions.Count</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Appointments Section -->
    <div class="card rounded-16px mb-4 shadow-sm p-4" style="background-color: #ffffff;">
        <!-- Filters and Buttons -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="d-flex gap-md-2">
                <!-- View Options -->
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-dark" id="prepareBtn"
                        onclick="toggleButtonClass(this); loadPatients('prepare')">Prepare</button>
                    <button type="button" class="btn btn-outline-dark" id="pickupBtn"
                        onclick="toggleButtonClass(this); loadPatients('pickup')">Pick up</button>
                    <button type="button" class="btn btn-outline-dark" id="doneBtn"
                        onclick="toggleButtonClass(this); loadPatients('done')">Done</button>
                </div>


                @* <!-- Date Filter -->
                <div>
                    <input type="date" class="form-control d-inline-block w-auto "
                        onchange="filterAppointmentsByDate()">
                </div>

                <!-- Sort Options -->
                <div>
                    <select id="sortTime" class="form-select w-auto " onchange="sortAppointments()">
                        <option value="asc">Ascending</option>
                        <option value="desc">Descending</option>
                    </select>
                </div> *@
            </div>

            <!-- Search Input -->
            <div class="input-group w-25">
                <span class="input-group-text text-muted">
                    <i class="fas fa-search"></i>
                </span>

                <input type="text" class="form-control" placeholder="Search">
            </div>
        </div>
        <!-- Patients List Section -->
        <div class="d-flex flex-wrap  mb-3 text-dark ms-4" style="gap: 30px;" id="patientsList">

        </div>
    </div>

</div>

<script>
    // Define the toggleButtonClass function
    function toggleButtonClass(button) {
        // Remove the 'btn-dark' class from all buttons
        document.querySelectorAll('.btn').forEach(btn => {
            btn.classList.remove('btn-dark');
            btn.classList.add('btn-outline-dark');
        });

        // Add 'btn-dark' class to the clicked button
        button.classList.remove('btn-outline-dark');
        button.classList.add('btn-dark');
    }

    // Define the loadPatients function
    function loadPatients(view) {
        let url = `/Employees/TestPharma?handler=LoadPartial&section=PatientCards&view=${view}`;
        console.log("Fetching URL:", url); // Debugging the URL

        fetch(url)
            .then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! Status: ${response.status}`);
                }
                return response.text();
            })
            .then(html => {
                document.querySelector('#patientsList').innerHTML = html;
            })
            .catch(error => {
                console.error('Error loading patients:', error);
                document.querySelector('#patientsList').innerHTML = `<p class="text-danger">Failed to load patients. Please try again later.</p>`;
            });
    }

</script>