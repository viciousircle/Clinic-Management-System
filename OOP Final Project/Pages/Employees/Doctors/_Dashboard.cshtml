@model OOP_Final_Project.ViewModels.DoctorViewModel

<div class="px-5">

    <div class="container " style="padding-left: 100px; padding-top: 48px; padding-right: 48px;">
        <div>
            <h1 class="text-center" style="color: #195478;">Doctor Dashboard</h1>
            <div class=" text-muted text-center mb-3">Helping people at their most vulnerable is a privilege.
            </div>
        </div>
    </div>

    <!-- Quick Access Section with Cards on the Left and Graph on the Right -->
    <div class="row g-3 mb-1 mx-1">
        <!-- Left Section: Quick Access Cards -->
        <div class="d-flex flex-row gap-md-5 " style="">
            @* 
            <div class="mb-2 w-100">
                <div class="card quick-access-card text-center shadow-sm"
                    style="background-color: white; border-radius: 16px; ">
                    <div class="card-body p-4 d-flex flex-column g-2 ">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class=" rounded-3 px-2 py-1 text-muted  btn "
                                style="border: 1px solid rgb(180, 180, 180); ">Appointments
                            </div>
                            <div class="text-light px-2 py-1 rounded-1" style="background-color: #45687e;">
                                @Model.Doctor.FirstName</div>
                        </div>
                        <div class="d-flex justify-content-center gap-md-2" style="height: 60px; align-items: center;">
                            <div class="d-flex gap-md-2 w-100 py-1 px-1 "
                                style="background-color: #f4f4f4; border-radius: 8px;">
                                <div class=" px-1 py-0 mx-1 my-1 rounded-16px" style="background-color: #457b9d;"></div>
                                <div class="mt-1"
                                    style=" color: #1d3557; display: flex; flex-direction: column; align-items: center; ">
                                    <h6 style="margin: 0; color: #1d3557;">Total </h6>
                                    <div>@Model.AppointmentCount</div>
                                </div>

                            </div>

                            <div class="bg-dark my-5  rounded-16px" style="padding: 3px 10px;"></div>

                            <div class="d-flex gap-md-2 w-100 py-1 px-1 "
                                style="background-color: #f4f4f4; border-radius: 8px;">
                                <div class=" px-1 py-1 mx-1 my-1 rounded-16px" style="background-color: #84a98c;"></div>
                                <div class="mt-1"
                                    style="color: #607c66; display: flex; flex-direction: column; align-items: center; ">
                                    <h6 style="margin: 0; color: #607c66;">Finished</h6>
                                    <div>@Model.CompletedAppointmentCount</div>
                                </div>

                            </div>
                        </div>


                    </div>
                </div>
            </div> *@

            <!-- Doctor Information Card -->
            <div class="card doctor-info-card shadow-sm mb-4 w-100"
                style="border-radius: 16px; background-color: #f4f4f4;">
                <div class="card-body p-4">
                    <div class="d-flex flex-column align-items-center text-center">

                        <!-- Doctor's Name -->
                        <h4 class="mb-1" style="color: #1d3557;"> @Model.Doctor.FirstName @Model.Doctor.LastName</h4>

                        <!-- Doctor's Specialization -->
                        <p class="text-muted mb-2">@Model.Doctor.Email</p>

                        <!-- Contact Information -->
                        <div class="d-flex flex-column align-items-center mt-3">
                            <div class="d-flex align-items-center gap-2 mb-2">
                                <i class="fas fa-phone-alt text-muted"></i>
                                <span>@Model.Doctor.Phone</span>
                            </div>
                            <div class="d-flex align-items-center gap-2">
                                <i class="fas fa-envelope text-muted"></i>
                                <span>@Model.Doctor.Email</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>






        </div>



    </div>

    <!--Statistics Section -->
    <div class="my-4 d-flex flex-wrap" style="justify-content: space-between;">
        <!-- Total Appointments -->
        <div class="col-md-3 d-flex flex-column">
            <div class="card quick-access-card text-center shadow-sm"
                style="background-color: white; border-radius: 16px;">
                <div class="card-body p-3 pb-2 d-flex flex-column g-2">
                    <div class="d-flex flex-column align-items-start gap-md-2" style="align-items: center;">
                        <div class="text-muted">Total Appointments</div>
                        <div class="d-flex gap-md-2 align-items-center">
                            <h3 class="mb-0 pb-0 ">@Model.AppointmentCount</h3>
                            <small class="text-success">
                                <i class="fas fa-arrow-circle-up"></i> 10% from last month
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Future Appointments -->
        <div class="col-md-3 d-flex flex-column">
            <div class="card quick-access-card text-center shadow-sm"
                style="background-color: white; border-radius: 16px;">
                <div class="card-body p-3 pb-2 d-flex flex-column g-2">
                    <div class="d-flex flex-column align-items-start gap-md-2" style="align-items: center;">
                        <div class="text-muted">Future Appointments</div>
                        <div class="d-flex gap-md-2 align-items-center">
                            <h3 class="mb-0">@Model.FutureAppointmentCount</h3>
                            <small>in the next 30 days</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Completed Appointments -->
        <div class="col-md-3 d-flex flex-column">
            <div class="card quick-access-card text-center shadow-sm"
                style="background-color: white; border-radius: 16px;">
                <div class="card-body p-3 pb-2 d-flex flex-column g-2">
                    <div class="d-flex flex-column align-items-start gap-md-2" style="align-items: center;">
                        <div class="text-muted">Completed Appointments</div>
                        <div class="d-flex gap-md-4 align-items-center">
                            <h3 class="mb-0 text-success">@Model.CompletedAppointmentCount</h3>
                            <small class="text-success">
                                <i class="fas fa-check-circle"></i> 95%
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cancelled Appointments -->
        <div class="col-md-2 d-flex flex-column" style="flex: 0 0 auto; width: 16.66666667%;">
            <div class="card quick-access-card text-center shadow-sm"
                style="background-color: white; border-radius: 16px;">
                <div class="card-body p-3 pb-2 d-flex flex-column ">
                    <div class="d-flex flex-column align-items-start gap-md-2" style="align-items: center;">
                        <div class="text-muted">Cancelled</div>
                        <div class="d-flex gap-md-2 align-items-center">
                            <h3 class="mb-0 text-danger">@Model.CancelledAppointmentCount</h3>
                            <small class="text-danger">
                                <i class="fas fa-times-circle"></i> 4%
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Section -->
    <div class="my-4 d-flex flex-wrap gap-md-4" style="justify-content:flex-start;">
        <!-- Total Patients -->
        <div class="col-md-3 d-flex flex-column">
            <div class="card quick-access-card text-center shadow-sm"
                style="background-color: white; border-radius: 16px;">
                <div class="card-body p-3 pb-2 d-flex flex-column g-2">
                    <div class="d-flex flex-column align-items-start gap-md-2" style="align-items: center;">
                        <div class="text-muted">Total Patients</div>
                        <div class="d-flex gap-md-3 align-items-center">
                            <h3 class="mb-0 pb-0 text-danger">@Model.PatientCount</h3>
                            <small class="text-danger">
                                <i class="fas fa-arrow-circle-up"></i> 10% last month
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Under observation -->
        <div class="col-md-3 d-flex flex-column">
            <div class="card quick-access-card text-center shadow-sm"
                style="background-color: white; border-radius: 16px;">
                <div class="card-body p-3 pb-2 d-flex flex-column g-2">
                    <div class="d-flex flex-column align-items-start gap-md-2" style="align-items: center;">
                        <div class="text-muted">Under observation </div>
                        <div class="d-flex gap-md-4 align-items-center text-warning">
                            <h3 class="mb-0">@Model.ObservedPatientCount</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




</div>
