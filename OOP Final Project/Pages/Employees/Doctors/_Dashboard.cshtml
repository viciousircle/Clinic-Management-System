@model OOP_Final_Project.ViewModels.DoctorViewModel

<div class="container " style="padding-left: 100px; padding-top: 64px; padding-right: 48px;">
    <div>
        <h1 class="text-center" style="color: #195478;">Doctor Dashboard</h1>
        <div class=" text-muted text-center mb-5">Helping people at their most vulnerable is a privilege.
        </div>
    </div>
</div>

<!-- Quick Access Section with Cards on the Left and Graph on the Right -->
<div class="row g-3 mb-5 mx-5">
    <!-- Left Section: Quick Access Cards -->
    <div class="col-md-6 d-flex flex-column">

        <div class="mb-2">
            <div class="card quick-access-card text-center shadow-sm"
                style="background-color: white; border-radius: 16px; ">
                <div class="card-body p-4 d-flex flex-column g-2 ">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class=" rounded-3 px-2 py-1 text-muted  btn "
                            style="border: 1px solid rgb(180, 180, 180); ">Appointments
                        </div>
                        <div class="text-light px-2 py-1 rounded-1" style="background-color: #45687e;">
                            Today</div>
                    </div>
                    <div class="d-flex justify-content-center gap-md-2" style="height: 60px; align-items: center;">
                        <div class="d-flex gap-md-2 w-100 py-1 px-1 "
                            style="background-color: #f4f4f4; border-radius: 8px;">
                            <div class=" px-1 py-0 mx-1 my-1 rounded-16px" style="background-color: #457b9d;"></div>
                            <div class="mt-1"
                                style=" color: #1d3557; display: flex; flex-direction: column; align-items: center; ">
                                <h6 style="margin: 0; color: #1d3557;">Total </h6>
                                <div>30</div>
                            </div>

                        </div>

                        <div class="bg-dark my-5  rounded-16px" style="padding: 3px 10px;"></div>

                        <div class="d-flex gap-md-2 w-100 py-1 px-1 "
                            style="background-color: #f4f4f4; border-radius: 8px;">
                            <div class=" px-1 py-1 mx-1 my-1 rounded-16px" style="background-color: #84a98c;"></div>
                            <div class="mt-1"
                                style="color: #607c66; display: flex; flex-direction: column; align-items: center; ">
                                <h6 style="margin: 0; color: #607c66;">Finished</h6>
                                <div>20</div>
                            </div>

                        </div>
                    </div>


                </div>
            </div>
        </div>

        <div class="mb-5">
            <div class="card quick-access-card text-center shadow-sm"
                style="background-color: white; border-radius: 16px; ">
                <div class="card-body p-4 d-flex flex-column g-2 ">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class=" rounded-3 px-2 py-1 text-muted  btn "
                            style="border: 1px solid rgb(180, 180, 180); ">Appointments
                        </div>
                        <div class="text-light px-2 py-1 rounded-1" style="background-color: #45687e;">
                            Today</div>
                    </div>
                    <div class="d-flex justify-content-center gap-md-2" style="height: 60px; align-items: center;">
                        <div class="d-flex gap-md-2 w-100 py-1 px-1 "
                            style="background-color: #f4f4f4; border-radius: 8px;">
                            <div class=" px-1 py-0 mx-1 my-1 rounded-16px" style="background-color: #457b9d;"></div>
                            <div class="mt-1"
                                style=" color: #1d3557; display: flex; flex-direction: column; align-items: center; ">
                                <h6 style="margin: 0; color: #1d3557;">Total</h6>
                                <div>30</div>
                            </div>

                        </div>

                        <div class="bg-dark my-5  rounded-16px" style="padding: 3px 10px;"></div>

                        <div class="d-flex gap-md-2 w-100 py-1 px-1 "
                            style="background-color: #f4f4f4; border-radius: 8px;">
                            <div class=" px-1 py-1 mx-1 my-1 rounded-16px" style="background-color: #84a98c;"></div>
                            <div class="mt-1"
                                style="color: #607c66; display: flex; flex-direction: column; align-items: center; ">
                                <h6 style="margin: 0; color: #607c66;">Finished</h6>
                                <div>20</div>
                            </div>

                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>

    <!-- Right Section: Graph -->
    <div class="col-md-6">
        <div class="card shadow-sm" style="border-radius: 24px;">
            <div class="card-body">
                <div class="card-title text-center">Performance Overview</div>
                <div class="text-center">
                    <canvas id="performanceChart" style="height: 300px;"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm" style="border-radius: 24px;">
            <div class="card-body">
                <div class="card-title text-center">Appointments Comparison</div>
                <div class="text-center">
                    <canvas id="appointmentsComparisonChart" style="height: 300px;"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm" style="border-radius: 24px;">
            <div class="card-body">
                <div class="card-title text-center">Daily Cancellations</div>
                <div class="text-center">
                    <canvas id="cancellationsChart" style="height: 300px;"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Bootstrap and JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


<script src="/js/Employees/General.js"></script>

<!-- Daily Cancellations (Pie Chart) -->
<script>
    const ctx3 = document.getElementById('cancellationsChart').getContext('2d');
    const cancellationsChart = new Chart(ctx3, {
        type: 'pie',
        data: {
            labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
            datasets: [{
                label: 'Daily Cancellations',
                data: [2, 5, 3, 4, 3, 2, 1], // Fake data for cancellations
                backgroundColor: [
                    'rgba(69, 123, 157, 0.8)',
                    'rgba(132, 169, 140, 0.8)',
                    'rgba(184, 140, 110, 0.8)',
                    'rgba(207, 125, 73, 0.8)',
                    'rgba(211, 84, 122, 0.8)',
                    'rgba(142, 163, 211, 0.8)',
                    'rgba(255, 159, 64, 0.8)',
                ],
                borderColor: 'rgba(255, 255, 255, 1)',
                borderWidth: 2
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                tooltip: {
                    callbacks: {
                        label: function (tooltipItem) {
                            return tooltipItem.label + ': ' + tooltipItem.raw + ' cancellations';
                        }
                    }
                }
            }
        }
    });
</script>

<!-- Weekly Appointments Comparison Chart (Bar Chart) -->
<script>
    const ctx2 = document.getElementById('appointmentsComparisonChart').getContext('2d');
    const appointmentsComparisonChart = new Chart(ctx2, {
        type: 'bar',
        data: {
            labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
            datasets: [
                {
                    label: 'Appointments Scheduled',
                    data: [20, 25, 18, 30, 35, 40, 22],
                    backgroundColor: 'rgba(69, 123, 157, 0.8)',
                    borderColor: 'rgba(69, 123, 157, 1)',
                    borderWidth: 1,
                },
                {
                    label: 'Appointments Completed',
                    data: [18, 20, 15, 28, 33, 38, 20],
                    backgroundColor: 'rgba(132, 169, 140, 0.8)',
                    borderColor: 'rgba(132, 169, 140, 1)',
                    borderWidth: 1,
                }
            ]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                tooltip: {
                    mode: 'index',
                    intersect: false,
                }
            },
            scales: {
                x: {
                    grid: {
                        display: false
                    }
                },
                y: {
                    beginAtZero: true,
                    grid: {
                        drawBorder: false
                    }
                }
            }
        }
    });
</script>