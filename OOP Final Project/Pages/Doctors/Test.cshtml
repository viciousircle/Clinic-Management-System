@page
@model OOP_Final_Project.Pages.Doctors.TestModel
@{
    ViewData["Title"] = "Doctor Dashboard Test";
}

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <!-- Removed Bootstrap Link as you already have it below -->
</head>
<style>
    body {
        background-color: #f7f8ff;
        color: #195478;
    }


    .rounded-16px {
        border-radius: 16px;
    }

    .hover-effect:hover {
        background-color: #d7dbe1;
    }
</style>

<div class=" pt-3 mt-5" style="background-color: #f7f8ff; ">
    <div class="d-flex gap-3 min-vh-100">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-flex flex-column ps-5">
            <div class="pt-2 mt-5">
                <div class="mb-4 text-center">
                    <h4><i>Welcome back, <b>Dr. Doe</b></i></h4>
                </div>
                <hr class="">
                <div class="nav flex-column fw-bold">
                    <a href="@Url.Page("/Doctors/DoctorDashboard")"
                        class="nav-link px-3 py-2 mb-2 hover-effect rounded-16px d-flex gap-4 align-items-sm-center"
                        style="color: #195478;">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                    <a href="@Url.Page("/Appointments/DoctorAppointment")"
                        class="nav-link px-3 py-2 mb-2  hover-effect rounded-16px d-flex align-items-sm-center gap-4"
                        style="color: #195478;">
                        <i class="fas fa-calendar-check"></i> Appointments
                    </a>
                    <a href="@Url.Page("/Doctors/PatientManagement")"
                        class="nav-link px-3 py-2 mb-2  hover-effect rounded-16px d-flex align-items-sm-center gap-4"
                        style="color: #195478;">
                        <i class="fas fa-users"></i> Patients
                    </a>
                    <a href="#"
                        class="nav-link px-3 py-2 mb-2 hover-effect rounded-16px d-flex align-items-sm-center gap-4"
                        style="color: #195478;">
                        <i class="fas fa-user-md"></i> Doctors
                    </a>
                    <a href="#"
                        class="nav-link px-3 py-2 mb-2  hover-effect rounded-16px d-flex align-items-sm-center gap-4"
                        style="color: #195478;">
                        <i class="fas fa-chart-line"></i> Reports
                    </a>
                    <a href="#"
                        class="nav-link px-3 py-2 mb-2  hover-effect rounded-16px d-flex align-items-sm-center gap-4"
                        style="color: #195478;">
                        <i class="fas fa-cogs"></i> Settings
                    </a>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="col pt-3 ms-3 mt-5 shadow-lg text-dark"
            style="border-top-left-radius: 48px; background-color: #ffffff;">
            <div class="container col" style="padding-left: 100px; padding-top: 64px; padding-right: 48px;">
                <div>
                    <h1 class="text-center">Doctor Dashboard</h1>
                    <div class=" text-muted text-center mb-5">Manage your appointments, patients, and more with ease.
                    </div>
                </div>

                <!-- Quick Access Section with Cards on the Left and Graph on the Right -->
                <div class="row g-4 mb-4">
                    <!-- Left Section: Quick Access Cards -->
                    <div class="col-md-6">
                        <div class="row g-3">
                            <div class="col-6">
                                <div class="card quick-access-card text-center">
                                    <div
                                        class="card-body p-4 d-flex flex-column align-items-center justify-content-center">
                                        <p class="text-muted fw-normal">Today's Appointments</p>
                                        <h3 class="my-3">30</h3>
                                        <p class="text-success">+5.27% since yesterday</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="card quick-access-card text-center">
                                    <div
                                        class="card-body p-4 d-flex flex-column align-items-center justify-content-center">
                                        <p class="text-muted fw-normal">New Patients</p>
                                        <h3 class="my-3">12</h3>
                                        <p class="text-success">+8.5% this week</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="card quick-access-card text-center">
                                    <div
                                        class="card-body p-4 d-flex flex-column align-items-center justify-content-center">
                                        <p class="text-muted fw-normal">Pending Reports</p>
                                        <h3 class="my-3">3</h3>
                                        <p class="text-danger">-2% resolution rate</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Right Section: Graph -->
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title text-center">Performance Overview</h5>
                                <div class="text-center">
                                    <canvas id="performanceChart" style="height: 300px;"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- Bootstrap and JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('performanceChart').getContext('2d');
    new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'],
            datasets: [{
                label: 'Appointments',
                data: [12, 19, 3, 5, 2],
                borderColor: '#195478',
                borderWidth: 2,
                fill: false,
                tension: 0.1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display: true
                }
            }
        }
    });
</script>