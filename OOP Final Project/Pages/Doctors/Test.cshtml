@page
@model OOP_Final_Project.Pages.Doctors.TestModel
@{
    ViewData["Title"] = "Doctor Dashboard Test";
}

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<div class="container-fluid mt-5">
    <div class="row min-vh-100"> <!-- Removed flex-nowrap here -->
        <!-- Fixed Sidebar using Bootstrap -->
        <nav class="col-md-3 col-lg-2 shadow-sm d-flex flex-column p-4  bg-light">
            <div class="position-fixed top-0 start-0 bottom-0 p-3">
                <!-- Doctor's Greeting -->
                <div class="mb-4 text-center">
                    <h4>Hi, Dr. Doe</h4>
                </div>

                <!-- Sidebar Navigation with Subtle Hover Effects -->
                <div class="nav flex-column">
                    <a href="@Url.Page("/Doctors/DoctorDashboard")"
                        class="nav-link p-3 mb-2 text-dark hover-effect rounded-5">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                    <a href="@Url.Page("/Appointments/DoctorAppointment")"
                        class="nav-link p-3 mb-2 text-dark hover-effect rounded-5">
                        <i class="fas fa-calendar-check"></i> Appointments
                    </a>
                    <a href="@Url.Page("/Doctors/PatientManagement")"
                        class="nav-link p-3 mb-2 text-dark hover-effect rounded-5">
                        <i class="fas fa-users"></i> Patients
                    </a>
                    <a href="#" class="nav-link p-3 mb-2 text-dark hover-effect rounded-5">
                        <i class="fas fa-user-md"></i> Doctors
                    </a>
                    <a href="#" class="nav-link p-3 mb-2 text-dark hover-effect rounded-5">
                        <i class="fas fa-chart-line"></i> Reports
                    </a>
                    <a href="#" class="nav-link p-3 mb-2 text-dark hover-effect rounded-5">
                        <i class="fas fa-cogs"></i> Settings
                    </a>
                </div>
            </div>

        </nav>

        <!-- Main Content with Bootstrap adjustment for Fixed Sidebar -->
        <div class="col py-3 ms-3"> <!-- Adjust margin to account for the fixed sidebar -->
            <h1 class="text-dark">Welcome to the Doctor Dashboard</h1>
            <p class="lead">Manage your appointments, patients, and more with ease.</p>

            <!-- Upcoming Appointments Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="m-0">Upcoming Appointments</h5>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Appointment 1</h5>
                    <p class="card-text">Details about the appointment go here.</p>
                    <a href="#" class="btn btn-outline-dark">View Details</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap and JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

<style>
    /* Subtle Hover Effect for Sidebar Links */
    .hover-effect:hover {
        background-color: #f0f0f0;
        border-radius: 4px;
    }
</style>
