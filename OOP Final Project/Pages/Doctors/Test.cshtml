@page
@model OOP_Final_Project.Pages.Doctors.TestModel
@{
    ViewData["Title"] = "Doctor Dashboard Test";
}

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <!-- Removed Bootstrap Link as you already have it below -->
</head>
<style>
    body {
        background-color: #e8f1f3;
        color: #195478;
    }

    .rounded-16px {
        border-radius: 16px;
    }

    .hover-effect:hover {
        background-color: #d7dbe1;
    }
</style>

<div class=" pt-3 mt-5" style="background-color: #e7e9f2; ">
    <div class="d-flex gap-3 min-vh-100">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-flex flex-column ps-5">
            <div class="pt-2 mt-5">
                <div class="mb-4 text-center">
                    <h4><i>Welcome back, <b>Dr. Doe</b></i></h4>
                </div>
                <hr class="">
                <div class="nav flex-column">
                    <a href="@Url.Page("/Doctors/DoctorDashboard")"
                        class="nav-link px-3 py-2 text-dark hover-effect rounded-16px d-flex gap-4 align-items-sm-center">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                    <a href="@Url.Page("/Appointments/DoctorAppointment")"
                        class="nav-link px-3 py-2 mb-2 text-dark hover-effect rounded-16px d-flex align-items-sm-center gap-4">
                        <i class="fas fa-calendar-check"></i> Appointments
                    </a>
                    <a href="@Url.Page("/Doctors/PatientManagement")"
                        class="nav-link px-3 py-2 mb-2 text-dark hover-effect rounded-16px d-flex align-items-sm-center gap-4">
                        <i class="fas fa-users"></i> Patients
                    </a>
                    <a href="#"
                        class="nav-link px-3 py-2 mb-2 text-dark hover-effect rounded-16px d-flex align-items-sm-center gap-4">
                        <i class="fas fa-user-md"></i> Doctors
                    </a>
                    <a href="#"
                        class="nav-link px-3 py-2 mb-2 text-dark hover-effect rounded-16px d-flex align-items-sm-center gap-4">
                        <i class="fas fa-chart-line"></i> Reports
                    </a>
                    <a href="#"
                        class="nav-link px-3 py-2 mb-2 text-dark hover-effect rounded-16px d-flex align-items-sm-center gap-4">
                        <i class="fas fa-cogs"></i> Settings
                    </a>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="col pt-3 ms-3 mt-5 shadow-lg" style="border-top-left-radius: 36px; background-color: #f8fdff;">
            <div class="container" style="padding-left: 100px; padding-top: 64px; padding-right: 48px;">
                <h1 class="text-center">Doctor Dashboard</h1>
                <div class=" text-muted text-center mb-5">Manage your appointments, patients, and more with ease.
                </div>

                <!-- Stats Section -->
                <div class="row g-4 mb-5">
                    <div class="col-md-4">
                        <div class="card stats-card">
                            <div class="card-body">
                                <i class="fas fa-calendar-check"></i>
                                <div class="lead">Upcoming Appointments</div>
                                <div class="value">5</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card stats-card">
                            <div class="card-body">
                                <i class="fas fa-users"></i>
                                <div class="lead">Total Patients</div>
                                <div class="value">120</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card stats-card">
                            <div class="card-body">
                                <i class="fas fa-chart-line"></i>
                                <div class="lead">Reports Pending</div>
                                <div class="value">3</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Upcoming Appointments Card -->
                <div class="card card-custom mb-4">
                    <div class="card-header card-header-custom">
                        <h5 class="m-0">Upcoming Appointments</h5>
                    </div>
                    <div class="card-body card-body-custom">
                        <h5 class="card-title">Appointment 1</h5>
                        <p class="card-text">Details about the appointment go here.</p>
                        <a href="#" class="btn btn-custom">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap and JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
