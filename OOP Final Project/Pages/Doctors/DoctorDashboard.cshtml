@page
@model OOP_Final_Project.Pages.Doctors.DoctorDashboardModel
@{
    ViewData["Title"] = "Doctor Dashboard";
}

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <!-- Removed Bootstrap Link as you already have it below -->
</head>
<style>
    body {
        background-color: #f7f8ff;
        color: #195478;

    }


    .rounded-16px {
        border-radius: 16px;
    }

    .hover-effect:hover {
        background-color: #d7dbe1;
    }
</style>

<div class=" pt-3 mt-5" style="background-color: #f7f8ff; font-family: Poppins, sans-serif; ">
    <div class="d-flex gap-3 min-vh-100">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-flex flex-column ps-5">
            <div class="pt-2 mt-5">
                <div class="mb-4 text-center" style="font-family: Libre Baskerville, serif;">
                    <h4><i>Welcome back, <b>Dr. Doe</b></i></h4>
                </div>
                <hr class="">
                <div class="nav flex-column ">
                    <a href="@Url.Page("/Doctors/DoctorDashboard")"
                        class="nav-link px-3 py-2 mb-2 hover-effect rounded-16px d-flex gap-4 align-items-sm-center"
                        style="color: #195478;">
                        <i class="fas fa-home"></i> Dashboard
                    </a>
                    <a href="@Url.Page("/Appointments/DoctorAppointment")"
                        class="nav-link px-3 py-2 mb-2  hover-effect rounded-16px d-flex align-items-sm-center gap-4"
                        style="color: #195478;">
                        <i class="fas fa-calendar-check"></i> Appointments
                    </a>
                    <a href="@Url.Page("/Doctors/PatientManagement")"
                        class="nav-link px-3 py-2 mb-2  hover-effect rounded-16px d-flex align-items-sm-center gap-4"
                        style="color: #195478;">
                        <i class="fas fa-user-injured"></i> Patients
                    </a>
                    <a href="#"
                        class="nav-link px-3 py-2 mb-2 hover-effect rounded-16px d-flex align-items-sm-center gap-4"
                        style="color: #195478;">
                        <i class="far fa-clock"></i> Schedule
                    </a>
                    <a href="#"
                        class="nav-link px-3 py-2 mb-2 hover-effect rounded-16px d-flex align-items-sm-center gap-4"
                        style="color: #195478;">
                        <i class="fas fa-sign-out-alt"></i> Log out
                    </a>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class=" pt-3 mx-5 mt-5 shadow-lg text-dark w-100" style="border-top-left-radius: 48px; border-top-right-radius: 48px; background-color: #fefefe;
            box-shadow: 0 0 10px rgba(23, 23, 27, 0.1);
            ">
            <div class="container " style="padding-left: 100px; padding-top: 64px; padding-right: 48px;">
                <div>
                    <h1 class="text-center" style="color: #195478;">Doctor Dashboard</h1>
                    <div class=" text-muted text-center mb-5">Helping people at their most vulnerable is a privilege.
                    </div>
                </div>
            </div>

            <!-- Quick Access Section with Cards on the Left and Graph on the Right -->
            <div class="row g-3 mb-5 mx-5">
                <!-- Left Section: Quick Access Cards -->
                <div class="col-md-6 d-flex flex-column">

                    <div class="mb-2">
                        <div class="card quick-access-card text-center shadow-sm"
                            style="background-color: white; border-radius: 16px; ">
                            <div class="card-body p-4 d-flex flex-column g-2 ">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class=" rounded-3 px-2 py-1 text-muted  btn "
                                        style="border: 1px solid rgb(180, 180, 180); ">Appointments
                                    </div>
                                    <div class="text-light px-2 py-1 rounded-1" style="background-color: #45687e;">
                                        Today</div>
                                </div>
                                <div class="d-flex justify-content-center gap-md-2"
                                    style="height: 60px; align-items: center;">
                                    <div class="d-flex gap-md-2 w-100 py-1 px-1 "
                                        style="background-color: #f4f4f4; border-radius: 8px;">
                                        <div class=" px-1 py-0 mx-1 my-1 rounded-16px"
                                            style="background-color: #457b9d;"></div>
                                        <div class="mt-1"
                                            style=" color: #1d3557; display: flex; flex-direction: column; align-items: center; ">
                                            <h6 style="margin: 0; color: #1d3557;">Total</h6>
                                            <div>30</div>
                                        </div>

                                    </div>

                                    <div class="bg-dark my-5  rounded-16px" style="padding: 3px 10px;"></div>

                                    <div class="d-flex gap-md-2 w-100 py-1 px-1 "
                                        style="background-color: #f4f4f4; border-radius: 8px;">
                                        <div class=" px-1 py-1 mx-1 my-1 rounded-16px"
                                            style="background-color: #84a98c;"></div>
                                        <div class="mt-1"
                                            style="color: #607c66; display: flex; flex-direction: column; align-items: center; ">
                                            <h6 style="margin: 0; color: #607c66;">Finished</h6>
                                            <div>20</div>
                                        </div>

                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>

                    <div class="mb-5">
                        <div class="card quick-access-card text-center shadow-sm"
                            style="background-color: white; border-radius: 16px; ">
                            <div class="card-body p-4 d-flex flex-column g-2 ">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class=" rounded-3 px-2 py-1 text-muted  btn "
                                        style="border: 1px solid rgb(180, 180, 180); ">Appointments
                                    </div>
                                    <div class="text-light px-2 py-1 rounded-1" style="background-color: #45687e;">
                                        Today</div>
                                </div>
                                <div class="d-flex justify-content-center gap-md-2"
                                    style="height: 60px; align-items: center;">
                                    <div class="d-flex gap-md-2 w-100 py-1 px-1 "
                                        style="background-color: #f4f4f4; border-radius: 8px;">
                                        <div class=" px-1 py-0 mx-1 my-1 rounded-16px"
                                            style="background-color: #457b9d;"></div>
                                        <div class="mt-1"
                                            style=" color: #1d3557; display: flex; flex-direction: column; align-items: center; ">
                                            <h6 style="margin: 0; color: #1d3557;">Total</h6>
                                            <div>30</div>
                                        </div>

                                    </div>

                                    <div class="bg-dark my-5  rounded-16px" style="padding: 3px 10px;"></div>

                                    <div class="d-flex gap-md-2 w-100 py-1 px-1 "
                                        style="background-color: #f4f4f4; border-radius: 8px;">
                                        <div class=" px-1 py-1 mx-1 my-1 rounded-16px"
                                            style="background-color: #84a98c;"></div>
                                        <div class="mt-1"
                                            style="color: #607c66; display: flex; flex-direction: column; align-items: center; ">
                                            <h6 style="margin: 0; color: #607c66;">Finished</h6>
                                            <div>20</div>
                                        </div>

                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Section: Graph -->
                <div class="col-md-6">
                    <div class="card shadow-sm" style="border-radius: 24px;">
                        <div class="card-body">
                            <div class="card-title text-center">Performance Overview</div>
                            <div class="text-center">
                                <canvas id="performanceChart" style="height: 300px;"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


<!-- Bootstrap and JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('performanceChart').getContext('2d');
    new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'],
            datasets: [{
                label: 'Appointments',
                data: [12, 19, 3, 5, 2],
                borderColor: '#195478',
                borderWidth: 2,
                fill: false,
                tension: 0.1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display: true
                }
            }
        }
    });
</script>