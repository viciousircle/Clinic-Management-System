@page
@model OOP_Final_Project.Pages.Appointments.DoctorAppointmentModel
@{
    ViewData["Title"] = "Doctor Appointment";
}

<head>
    <!-- Link to Bootstrap 5 for modern UI -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>

<div class="container-fluid mt-5">
    <div class="row">
        <!-- Sidebar Section -->
        <div class="col-md-3 col-lg-2 p-3  text-dark">
            <div class="list-group">
                <a href="@Url.Page("/Doctors/DoctorDashboard")" class="list-group-item list-group-item-action ">
                    Dashboard
                </a>
                <a href="@Url.Page("/Appointments/DoctorAppointment")"
                    class="list-group-item list-group-item-secondary ">
                    Appointments
                </a>
                <a href="@Url.Page("/Doctors/PatientManagement")" class="list-group-item list-group-item-action ">
                    Patients
                </a>
                <a href="#" class="list-group-item list-group-item-action ">
                    Doctors
                </a>
                <a href="#" class="list-group-item list-group-item-action ">
                    Reports
                </a>
                <a href="#" class="list-group-item list-group-item-action ">
                    Settings
                </a>
            </div>
        </div>

        <div class="col-md-9 col-lg-10">
            <div class="text-center mb-4">
                <h1 class="fw-bold">Appointments</h1>
            </div>

            <div class="container mt-4">
                <!-- Filter Section -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <label for="dateFilter" class="form-label">Filter by Date:</label>
                        <input type="date" class="form-control" id="dateFilter" onchange="filterAppointmentsByDate()" />
                    </div>
                    <div class="col-md-6">
                        <label for="sortTime" class="form-label">Sort by Time:</label>
                        <select class="form-select" id="sortTime" onchange="sortAppointments()">
                            <option value="asc">Ascending</option>
                            <option value="desc">Descending</option>
                        </select>
                    </div>
                </div>

                <!-- Upcoming Appointments Section -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header d-flex align-items-center bg-dark text-white">
                        <i class="fas fa-calendar-check me-2"></i> Upcoming Appointments
                    </div>
                    <div class="card-body">
                        <table class="table table-hover table-bordered" id="appointmentsTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Patient Name</th>
                                    <th>Appointment Date</th>
                                    <th>Appointment Time</th>
                                    <th>Reason for Visit</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var appointment in Model.Appointments)
                                {
                                    <tr>
                                        <td>@appointment.PatientName</td>
                                        <td>@appointment.AppointmentDate.ToString("yyyy-MM-dd")</td>
                                        <td>@appointment.AppointmentTime</td>
                                        <td>@appointment.Reason</td>
                                        <td>
                                            @if (appointment.Status == "Completed")
                                            {
                                                <span class="badge bg-success">Completed</span>
                                            }
                                            else
                                            {
                                                <form method="post" asp-page-handler="MarkCompleted"
                                                    asp-route-id="@appointment.Id">
                                                    <button type="submit" class="btn btn-outline-success btn-sm">Health Check
                                                        Form</button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- JavaScript for Filter and Sort -->
<script>
    function filterAppointmentsByDate() {
        const dateFilter = document.getElementById("dateFilter").value;
        const rows = document.querySelectorAll("#appointmentsTable tbody tr");

        rows.forEach(row => {
            const appointmentDate = row.cells[1].textContent; // Get appointment date from second column
            if (dateFilter && appointmentDate !== dateFilter) {
                row.style.display = "none"; // Hide row if date doesn't match
            } else {
                row.style.display = ""; // Show row if date matches or no filter is applied
            }
        });
    }

    function sortAppointments() {
        const sortOption = document.getElementById("sortTime").value;
        const table = document.getElementById("appointmentsTable");
        const rows = Array.from(table.querySelectorAll("tbody tr"));

        rows.sort((rowA, rowB) => {
            const timeA = rowA.cells[2].textContent; // Get appointment time from third column
            const timeB = rowB.cells[2].textContent;

            if (sortOption === "asc") {
                return timeA.localeCompare(timeB); // Ascending order
            } else {
                return timeB.localeCompare(timeA); // Descending order
            }
        });

        // Re-append sorted rows to the table
        const tbody = table.querySelector("tbody");
        rows.forEach(row => tbody.appendChild(row));
    }
</script>
