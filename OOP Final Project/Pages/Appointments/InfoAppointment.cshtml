@page
@model OOP_Final_Project.Pages.Appointments.InfoAppointmentModel
@{
    ViewData["Title"] = "Appointment Details";
}

<div class="text-center mb-4">
    <h1>Appointment Details</h1>
    <p class="text-muted">Please arrange time to come on time for your appointment!</p>
</div>
<div class="container mt-4 d-flex justify-content-center">
    <div class="card shadow-lg" style="max-width: 40rem; width: 100%;">
        <div class="card-header bg-dark text-white text-center">
            <i class="bi bi-calendar-check fs-4"></i>
            <h4 class="mt-2">Appointment Information</h4>
        </div>
        <div class="card-body px-4 py-5">
            <div class="row mb-4">
                <div class="col-md-6 mb-3 mb-md-0">
                    <div class="d-flex align-items-start">
                        <i class="bi bi-clock text-primary fs-4 me-3"></i>
                        <div>
                            <h6 class="fw-bold">Appointment Date</h6>
                            <p class="text-muted mb-0">@Model.AppointmentDate</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-start">
                        <i class="bi bi-person-circle text-primary fs-4 me-3"></i>
                        <div>
                            <h6 class="fw-bold">Doctor</h6>
                            <p class="text-muted mb-0">@Model.DoctorName</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col-md-6 mb-3 mb-md-0">
                    <div class="d-flex align-items-start">
                        <i class="bi bi-award text-primary fs-4 me-3"></i>
                        <div>
                            <h6 class="fw-bold">Specialization</h6>
                            <p class="text-muted mb-0">@Model.Specialization</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-start">
                        <i class="bi bi-geo-alt text-primary fs-4 me-3"></i>
                        <div>
                            <h6 class="fw-bold">Location</h6>
                            <p class="text-muted mb-0">@Model.Location</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="d-flex align-items-start">
                        <i class="bi bi-card-text text-primary fs-4 me-3"></i>
                        <div>
                            <h6 class="fw-bold">Notes</h6>
                            <p class="text-muted mb-0">@Model.Notes</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light d-flex justify-content-end gap-2">
            <a href="/Appointments/Reschedule" class="btn btn-dark">
                <i class="bi bi-calendar-event"></i> Reschedule
            </a>
            <a href="/Appointments/Cancel" class="btn btn-outline-danger">
                <i class="bi bi-x-circle"></i> Cancel Appointment
            </a>
        </div>
    </div>
</div>
