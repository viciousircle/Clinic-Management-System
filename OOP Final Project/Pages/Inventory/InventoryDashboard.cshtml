                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)'
                ],
                borderWidth: 1
            }]
        };

        const inventoryStockConfig = {
            type: 'bar',
            data: inventoryStockData,
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Current Inventory Stock Levels by Type'
                    }
                },
                scales: {
                    x: {
                        title: {
                            display: true,
                            text: 'Medicine Type'
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: 'Stock Levels (Units)'
                        },
                        beginAtZero: true
                    }
                }
            }
        };

        const inventoryStockChart = new Chart(
            document.getElementById('inventoryStockChart'),
