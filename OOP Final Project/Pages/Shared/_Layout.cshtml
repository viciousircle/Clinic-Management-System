<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OOP_Final_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OOP_Final_Project.styles.css" asp-append-version="true" />
</head>

<style>
    /* Navbar custom styles */
    .navbar {
        background: linear-gradient(90deg, #1e2939, #6610f2);
        color: #fff;
    }

    /* Dropdown menu alignment */
    .dropdown-menu {
        top: 100%;
        /* Align dropdown to be just below the navbar */
        margin-top: 0;
        /* Remove extra spacing */
        border-radius: 0.25rem;
        transition: all 0.3s ease-in-out;
    }

    /* Show dropdown menu on hover */
    .nav-item.dropdown:hover .dropdown-menu {
        display: block;
        opacity: 1;
    }

    /* Dropdown item hover effect */
    .dropdown-item:hover {
        background-color: #6610f2;
        color: #fff;
    }
</style>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-lg">
            <div class="container">
                <a class="navbar-brand fw-bold text-uppercase" asp-area="" asp-page="/Index">Viciousircle Clinic</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item dropdown position-static">
                            <a class="nav-link dropdown-toggle" href="#" id="doctorDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Doctors
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="doctorDropdown">
                                <li><a class="dropdown-item" asp-area=""
                                        asp-page="/Doctors/DoctorDashboard">Dashboard</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Doctors/DoctorList">Doctor List</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Inventory/InventoryDashboard">Inventory</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/LogIn">Log In</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - OOP_Final_Project - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>