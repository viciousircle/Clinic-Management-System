<!-- Modal -->
<div class="modal fade" id="prescribeDetailModal" tabindex="-1" aria-labelledby="prescribeDetailModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content" style="border-radius: 24px;">
            <div class="modal-header">
                <h5 class="modal-title" id="prescribeDetailModalLabel">Prescription Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Accordion -->
                <div class="accordion" id="prescriptionAccordion">
                    <!-- Panel 1: Appointment Information -->
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingOne">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Appointment Information
                            </button>
                        </h2>
                        <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne"
                            data-bs-parent="#prescriptionAccordion">
                            <div class="accordion-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="patientName" class="form-label">Patient Name:</label>
                                        <input type="text" class="form-control" id="patientName" value="John Doe"
                                            disabled>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="doctorName" class="form-label">Doctor Name:</label>
                                        <input type="text" class="form-control" id="doctorName" value="Dr. Smith"
                                            disabled>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <label for="appointmentTime" class="form-label">Appointment Time:</label>
                                        <input type="text" class="form-control" id="appointmentTime"
                                            value="12:00 PM, 25th December 2024" disabled>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Panel 2: Medicine Details (Table format) -->
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingTwo">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Medicine Details
                            </button>
                        </h2>
                        <div id="collapseTwo" class="accordion-collapse collapse show" aria-labelledby="headingTwo"
                            data-bs-parent="#prescriptionAccordion">
                            <div class="accordion-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead class="table-light">
                                            <tr>
                                                <th scope="col" style="width: 25%;">Medicine Name</th>
                                                <th scope="col" style="width: 20%;">Dosage</th>
                                                <th scope="col" style="width: 15%;">Frequency</th>
                                                <th scope="col" style="width: 15%;">Duration</th>
                                                <th scope="col" style="width: 20%;">Special Instructions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <!-- Medicine 1 -->
                                            <tr id="firstRow">
                                                <td onclick="changeColor(this.parentElement)">Ibuprofen 200mg</td>
                                                <td onclick="changeColor(this.parentElement)">200mg</td>
                                                <td onclick="changeColor(this.parentElement)">Twice a day</td>
                                                <td onclick="changeColor(this.parentElement)">5 days</td>
                                                <td onclick="changeColor(this.parentElement)">Take with food</td>
                                            </tr>
                                            <!-- Medicine 2 -->
                                            <tr id="secondRow">
                                                <td onclick="changeColor(this.parentElement)">Paracetamol 500mg</td>
                                                <td onclick="changeColor(this.parentElement)">500mg</td>
                                                <td onclick="changeColor(this.parentElement)">As needed for pain</td>
                                                <td onclick="changeColor(this.parentElement)">As needed</td>
                                                <td onclick="changeColor(this.parentElement)">Do not exceed 4 doses per
                                                    day</td>
                                            </tr>
                                            <!-- Medicine 3 -->
                                            <tr id="thirdRow">
                                                <td onclick="changeColor(this.parentElement)">Vitamin C 1000mg</td>
                                                <td onclick="changeColor(this.parentElement)">1000mg</td>
                                                <td onclick="changeColor(this.parentElement)">Once a day</td>
                                                <td onclick="changeColor(this.parentElement)">Ongoing</td>
                                                <td onclick="changeColor(this.parentElement)">Take with water</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="form-check d-flex gap-md-2" style="justify-content: flex-end;">
                                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault"
                                        onclick="toggleAllRows(this)">
                                    <label class="form-check-label" for="flexCheckDefault">
                                        Check all
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" id="prepareBtn" data-bs-dismiss="modal">Prepare done and
                    print</button>
            </div>
        </div>
    </div>
</div>

<script>
    function changeColor(row) {
        var checkAll = document.getElementById('flexCheckDefault');
        if (row.classList.contains('table-primary')) {
            row.classList.remove('table-primary');
        } else {
            row.classList.add('table-primary');
        }
        updateCheckAll();
    }

    function toggleAllRows(checkbox) {
        var rows = document.querySelectorAll('tbody tr');
        rows.forEach(function (row) {
            if (checkbox.checked) {
                row.classList.add('table-primary');
            } else {
                row.classList.remove('table-primary');
            }
        });
    }

    function updateCheckAll() {
        var rows = document.querySelectorAll('tbody tr');
        var checkAll = document.getElementById('flexCheckDefault');
        var allChecked = true;
        rows.forEach(function (row) {
            if (!row.classList.contains('table-primary')) {
                allChecked = false;
            }
        });
        checkAll.checked = allChecked;
    }
</script>