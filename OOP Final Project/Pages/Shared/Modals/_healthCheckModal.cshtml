<div class="modal fade" id="healthCheckModal" tabindex="-1" aria-labelledby="healthCheckModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="healthCheckModalLabel">Health Check</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="healthCheckForm">
                    <!-- Temperature -->
                    <div class="mb-3">
                        <label for="temperature" class="form-label">Temperature (°C)</label>
                        <input type="number" step="0.1" class="form-control" id="temperature"
                            placeholder="Enter temperature" required>
                    </div>
                    <!-- Heart Rate -->
                    <div class="mb-3">
                        <label for="heartRate" class="form-label">Heart Rate (bpm)</label>
                        <input type="number" class="form-control" id="heartRate" placeholder="Enter heart rate"
                            required>
                    </div>
                    <!-- Blood Pressure -->
                    <div class="mb-3">
                        <label for="bloodPressure" class="form-label">Blood Pressure</label>
                        <input type="text" class="form-control" id="bloodPressure" placeholder="e.g., 120/80" required>
                    </div>
                    <!-- General Notes -->
                    <div class="mb-3">
                        <label for="healthNotes" class="form-label">General Notes</label>
                        <textarea class="form-control" id="healthNotes" rows="3"
                            placeholder="Add any additional notes"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="markAsDone()">Mark as Done</button>
            </div>
        </div>
    </div>
</div>

<script>
    function markAsDone() {
        const form = document.getElementById('healthCheckForm');
        if (form.checkValidity()) {
            const healthData = {
                temperature: document.getElementById('temperature').value,
                heartRate: document.getElementById('heartRate').value,
                bloodPressure: document.getElementById('bloodPressure').value,
                notes: document.getElementById('healthNotes').value,
            };

            // Perform actions with the health data (e.g., save it, log it, etc.)
            console.log("Health Check Data:", healthData);
            alert("Health check marked as done!");

            // Optionally, reset the form and close the modal
            form.reset();
            document.querySelector('#healthCheckModal .btn-close').click();
        } else {
            alert("Please fill in all required fields.");
        }
    }
</script>
