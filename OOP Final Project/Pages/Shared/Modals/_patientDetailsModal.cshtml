<div class="modal fade" id="patientDetailsModal" tabindex="-1" aria-labelledby="patientDetailsModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">

        <div class="modal-content" style="border-radius: 24px;">
            <div class="modal-header">
                <h5 class="modal-title" id="patientDetailsModalLabel">Patient Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Accordion starts here -->
                <div class="accordion accordion-flush" id="accordionFlushExample">
                    <!-- Panel 1 -->
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                data-bs-target="#flush-collapseOne" aria-expanded="true"
                                aria-controls="flush-collapseOne">
                                Basic Information
                            </button>
                        </h2>
                        <div id="flush-collapseOne" class="accordion-collapse collapse show"
                            data-bs-parent="#accordionFlushExample">
                            <div class="accordion-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="patientDetailsPatientID" class="form-label">ID:</label>
                                        <input type="number" class="form-control text-muted"
                                            id="patientDetailsPatientID" placeholder="N/A" disabled>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="patientDetailsPatientName" class="form-label">Full Name:</label>
                                        <input type="text" class="form-control text-muted"
                                            id="patientDetailsPatientName" placeholder="N/A" disabled>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="patientDetailsPatientEmail" class="form-label">Email:</label>
                                        <input type="text" class="form-control text-muted"
                                            id="patientDetailsPatientEmail" placeholder="N/A" disabled>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="patientDetailsPatientPhone" class="form-label">Phone:</label>
                                        <input type="text" class="form-control text-muted"
                                            id="patientDetailsPatientPhone" placeholder="N/A" disabled>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="patientDetailsPatientAddress" class="form-label">Address:</label>
                                        <input type="text" class="form-control text-muted"
                                            id="patientDetailsPatientAddress" placeholder="N/A" disabled>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="patientDetailsPatientLatestVisit" class="form-label">Latest
                                            Visit:</label>
                                        <input type="text" class="form-control text-muted"
                                            id="patientDetailsPatientLatestVisit" placeholder="N/A" disabled>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Panel 3 -->
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#flush-collapseThree" aria-expanded="false"
                                aria-controls="flush-collapseThree">
                                Previous Appointment Record
                            </button>
                        </h2>
                        <div id="flush-collapseThree" class="accordion-collapse collapse"
                            data-bs-parent="#accordionFlushExample">
                            <div class="accordion-body">
                                <form>
                                    <div class="mb-3">
                                        <label for="appointmentDate" class="form-label">Appointment Date:</label>
                                        <input type="text" class="form-control" id="appointmentDate" value="2024-11-15"
                                            disabled>
                                    </div>
                                    <div class="mb-3">
                                        <label for="doctorName" class="form-label">Doctor:</label>
                                        <input type="text" class="form-control" id="doctorName" value="Dr. Smith"
                                            disabled>
                                    </div>
                                    <div class="mb-3">
                                        <label for="reason" class="form-label">Reason:</label>
                                        <input type="text" class="form-control" id="reason" value="Routine Checkup"
                                            disabled>
                                    </div>
                                    <div class="mb-3">
                                        <label for="healthCheck" class="form-label">Health Check:</label>
                                        <input type="text" class="form-control" id="healthCheck"
                                            value="Blood Pressure: 120/80, Pulse: 72" disabled>
                                    </div>
                                    <div class="mb-3">
                                        <label for="diagnosis" class="form-label">Diagnosis:</label>
                                        <input type="text" class="form-control" id="diagnosis"
                                            value="All vitals are normal." disabled>
                                    </div>
                                    <div class="mb-3">
                                        <label for="prescriptions" class="form-label">Prescribed Medicines:</label>
                                        <textarea class="form-control" id="prescriptions" rows="3" disabled>
Aspirin 100mg
Ibuprofen 200mg
Paracetamol 500mg
                                        </textarea>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Accordion ends here -->
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-outline-dark" id="makeAppointmentBtn">Make Appointment</button>
            </div>
        </div>
    </div>
</div>

<!-- Include this script to initialize the popover on modal show -->
<script>
    // Initialize the modal and popover
    var myModal = new bootstrap.Modal(document.getElementById('patientDetailsModal'));

    document.getElementById('patientDetailsModal').addEventListener('shown.bs.modal', function () {
        // Initialize the popover
        var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'));
        var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
            return new bootstrap.Popover(popoverTriggerEl, {
                html: true // Enable HTML content in popover
            });
        });
    });

    // Add event listener to "Make Appointment" button
    document.getElementById('makeAppointmentBtn').addEventListener('click', function () {
        // Hide the patient details modal
        var patientDetailsModal = bootstrap.Modal.getInstance(document.getElementById('patientDetailsModal'));
        patientDetailsModal.hide();

        // Show the new appointment modal
        var newAppointmentModal = new bootstrap.Modal(document.getElementById('newAppointmentModal'));
        newAppointmentModal.show();
    });
</script>