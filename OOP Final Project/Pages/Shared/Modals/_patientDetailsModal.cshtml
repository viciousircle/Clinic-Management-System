<script>
    // Initialize the modal and popover
    var myModal = new bootstrap.Modal(document.getElementById('patientDetailsModal'));

    document.getElementById('patientDetailsModal').addEventListener('shown.bs.modal', function () {
        // Initialize the popover
        var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'));
        var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
            return new bootstrap.Popover(popoverTriggerEl, {
                html: true // Enable HTML content in popover
            });
        });
    });

    // Add event listener to "Make Appointment" button
    document.getElementById('makeAppointmentBtn').addEventListener('click', function () {
        // Hide the patient details modal
        var patientDetailsModal = bootstrap.Modal.getInstance(document.getElementById('patientDetailsModal'));
        patientDetailsModal.hide();

        // Show the new appointment modal
        var newAppointmentModal = new bootstrap.Modal(document.getElementById('newAppointmentModal'));
        newAppointmentModal.show();
    });

    // filepath: /Users/a8888/Documents/viciousircle/OOP Final Project/OOP Final Project/Pages/Shared/Modals/_patientDetailsModal.cshtml
    function openPatientDetailsModal(button) {
        var myModal = new bootstrap.Modal(document.getElementById('patientDetailsModal'));

        var patientId = button.getAttribute('data-patient-id');
        var patientName = button.getAttribute('data-patient-name');
        var patientPhone = button.getAttribute('data-patient-phone');
        var patientAddress = button.getAttribute('data-patient-address');
        var patientEmail = button.getAttribute('data-patient-email');
        var patientLatestVisit = button.getAttribute('data-patient-latest-visit');
        var patientReason = button.getAttribute('data-patient-reason');
        var patientDiagnose = button.getAttribute('data-patient-diagnose');
        var patientMedicines = button.getAttribute('data-patient-medicines');

        // Fill basic patient details
        document.getElementById('patientDetailsPatientID').value = patientId;
        document.getElementById('patientDetailsPatientName').value = patientName;
        document.getElementById('patientDetailsPatientPhone').value = patientPhone;
        document.getElementById('patientDetailsPatientAddress').value = patientAddress;
        document.getElementById('patientDetailsPatientEmail').value = patientEmail;
        document.getElementById('patientDetailsPatientLatestVisit').value = patientLatestVisit;
        document.getElementById('patientDetailsPatientReason').value = patientReason;
        document.getElementById('diagnosis').value = patientDiagnose;

        // Handle medicines
        var medicines = JSON.parse(patientMedicines);
        populatePrescriptionsTable(medicines);

        // Show the modal
        myModal.show();
    }

    function populatePrescriptionsTable(medicines) {
        var prescriptionsTableBody = document.getElementById('prescriptionsTableBody');
        prescriptionsTableBody.innerHTML = ''; // Clear existing table data

        // Loop through medicines and populate the table
        medicines.forEach(function (medicine) {
            var row = document.createElement('tr');

            // Create table cells for each property of the medicine
            var idCell = document.createElement('td');
            idCell.textContent = medicine.MedicineId;
            row.appendChild(idCell);

            var nameCell = document.createElement('td');
            nameCell.textContent = medicine.MedicineName;
            row.appendChild(nameCell);

            var dosageCell = document.createElement('td');
            dosageCell.textContent = medicine.DosageAmount;
            row.appendChild(dosageCell);

            var frequencyCell = document.createElement('td');
            frequencyCell.textContent = medicine.Frequency;
            row.appendChild(frequencyCell);

            var frequencyUnitCell = document.createElement('td');
            frequencyUnitCell.textContent = medicine.FrequencyUnit;
            row.appendChild(frequencyUnitCell);

            var routeCell = document.createElement('td');
            routeCell.textContent = medicine.Route;
            row.appendChild(routeCell);

            var instructionsCell = document.createElement('td');
            instructionsCell.textContent = medicine.Instruction;
            row.appendChild(instructionsCell);

            // Append the row to the prescriptions table
            prescriptionsTableBody.appendChild(row);
        });
    }

</script>